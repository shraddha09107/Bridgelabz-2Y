import java.util.*;

abstract class FoodItem {
    private String itemName;
    private double price;
    private int quantity;

    public FoodItem(String itemName, double price, int quantity) {
        this.itemName = itemName; this.price = price; this.quantity = quantity;
    }
    public String getItemName() { return itemName; }
    public double getPrice() { return price; }
    public int getQuantity() { return quantity; }
    public void setQuantity(int q) { this.quantity = q; }

    public void getItemDetails() {
        System.out.println(itemName + " x" + quantity + " unit price " + price);
    }

    public abstract double calculateTotalPrice();
}

interface Discountable {
    double applyDiscount(); // absolute amount
    String getDiscountDetails();
}

class VegItem extends FoodItem implements Discountable {
    public VegItem(String name, double price, int q) { super(name,price,q); }
    @Override public double calculateTotalPrice() { return getPrice() * getQuantity(); }
    @Override public double applyDiscount() { return getPrice() * getQuantity() > 500 ? 50 : 0; }
    @Override public String getDiscountDetails() { return "Veg discount: 50 if total>500"; }
}

class NonVegItem extends FoodItem implements Discountable {
    private double nonVegCharge = 30; // per item
    public NonVegItem(String name, double price, int q) { super(name,price,q); }
    @Override public double calculateTotalPrice() {
        return getPrice() * getQuantity() + nonVegCharge * getQuantity();
    }
    @Override public double applyDiscount() { return 0; }
    @Override public String getDiscountDetails() { return "No discount on non-veg"; }
}

public class FoodDelivery {
    public static double processOrder(List<FoodItem> items) {
        double total = 0;
        for (FoodItem f : items) {
            double itemTotal = f.calculateTotalPrice();
            double discount = (f instanceof Discountable) ? ((Discountable)f).applyDiscount() : 0;
            total += itemTotal - discount;
            f.getItemDetails();
            if (f instanceof Discountable) System.out.println(((Discountable)f).getDiscountDetails() + " -> discount " + discount);
            System.out.println("Item total after discount: " + (itemTotal - discount));
        }
        return total;
    }
    public static void main(String[] args) {
        List<FoodItem> order = Arrays.asList(new VegItem("Paneer Butter",250,2), new NonVegItem("Chicken Biryani",220,1));
        double bill = processOrder(order);
        System.out.println("Total bill: " + bill);
    }
}
